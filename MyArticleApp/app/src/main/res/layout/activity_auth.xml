<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADCED5"
    tools:context=".presentation.AuthActivity">

    <Button
        android:id="@+id/singUpButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="152dp"
        android:layout_height="40dp"
        android:text="Sing Up"
        android:textColor="#FE7153"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singInButton"
        app:layout_constraintVertical_bias="0.142"
        tools:background="#FFFFFF" />

    <Button
        android:id="@+id/singInButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="152dp"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:text="Sing in"
        android:textColor="#FE7153"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordTextInput"
        app:layout_constraintVertical_bias="0.133"
        app:strokeColor="#FE7153" />

    <TextView
        android:id="@+id/singUpSwitch"
        android:layout_width="63dp"
        android:layout_height="23dp"
        android:text="Sing up"
        android:textColor="#4E89A7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.646"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.259" />

    <TextView
        android:id="@+id/singInSwitch"
        android:layout_width="62dp"
        android:layout_height="29dp"
        android:layout_marginEnd="20dp"
        android:text="Sing in"
        android:textColor="#4E89A7"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/singUpSwitch"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.254" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/loginTextInput"
        android:layout_width="259dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:hint="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.348" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/passwordTextInput"
        android:layout_width="259dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:hint="Password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginTextInput"
        app:layout_constraintVertical_bias="0.062" />
</androidx.constraintlayout.widget.ConstraintLayout>